<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yardfon.geometry.MainGeometry"
    android:background="#FF242529"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:background="#d274d1"
        android:text="Geometric Geometry Formula"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/triangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/triangle"
        android:layout_marginTop="50dp"
        android:background="#ef8c45"
        android:text="triangle"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/circle"
        android:background="#efc745"
        android:text="Cirle"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/trapeoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trapeoid"
        android:background="#FFBCEF45"
        android:text="trapeoid"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/square"
        android:background="#3bf4d5"
        android:text="square"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>
